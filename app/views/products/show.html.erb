<% provide(:title, @product.name) %>
<div class="row">
  <aside class="col-md-4">
    <div class="brand">
      <div class="content">
          <%= image_tag @product.image_name if @product.image_name.attached? %>
          <ul>
            <li  class="brand-name"><%= @product.name %></li>
            <li class="brand-explain">ブランド　<%= link_to @brand.name, @brand,class:"black" %></li>
            <li  class="brand-explain">カテゴリ　<%= @product.category %></li>
            <li class="brand-explain">参考価格　<%= @product.price %>円</li>
            <li class="brand-explain">
              商品説明　<%= @product.explain %>
            </li>
            <section class="micropost_form">
             <%= render 'shared/micropost_form' %>
            </section>
          </ul>
      </div>
    </div>
  </aside>
   <div class="col-md-8">
    <% if @product.microposts.any? %>
      <h3>口コミ (<%= @product.microposts.count %>件)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% else %>
      <h3>この商品の口コミはまだありません。</h3>
    <% end %>
  </div>
</div>