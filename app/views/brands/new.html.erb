<<% provide(:title, 'Add Brand') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @brand, local: true) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :explain %>
      <%= f.text_field :explain %>

      <span class="image">
          <%= f.file_field :image_name, accept: "image/jpeg,image/gif,image/png" %>
      </span>

      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>