<% provide(:title, @brand.name) %>
<div class="row">
  <aside class="col-md-4">
    <div class="brand">
      <div class="content">
        <h1>
          <%= image_tag @brand.image_name if @brand.image_name.attached? %>
          <ul>
            <li class="brand-name"><%= @brand.name %></li>
            <li class="brand-explain"><%= @brand.explain %></li>
          </ul>
        </h1>
      </div>
    </div>
  </aside>
   <div class="col-md-8 ">
    <% if @brand.products.any? %>
      <h3>商品一覧 (<%= @brand.products.count %>件)</h3>
      <ol class="microposts">
        <%= render @products %>
      </ol>
    <% else %>
      <h3>まだ商品が登録されていません。</h3>
    <% end %>
  </div>
</div>