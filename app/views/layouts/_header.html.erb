  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "A984CB32-4AB7-4FD3-92D2-DFE11714D8F6_1_105_c.jpeg",class: "logo-img" %>
      F L Y B
    <% end %>
    
    <nav>
