<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "icon_115500_256.png",class: "logo-img" %>
      OTOCOS
    <% end %>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li ><%= link_to "ホーム",   root_path ,class:"black-btn" %></li>
        <% if logged_in? %>
          <li ><%= link_to "新着商品",   products_path,class:"orange-btn" %></li>
          <li ><%= link_to "ブランド", brands_path,class:"black-btn" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span><%= current_user.name %></span><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li ><%= link_to "マイページ", current_user,class:"#" %></li>
              <li ><%= link_to "編集", edit_user_path(current_user),class:"#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete,class: "#" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li ><%= link_to "新規登録",   signup_path,class:"orange-btn" %></li>
          <li><%= link_to "ログイン", login_path ,class:"black-btn"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>